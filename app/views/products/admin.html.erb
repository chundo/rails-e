<h1>Admin</h1>
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Imagen:</strong>
  <%= image_tag(@product.imagen) %>
</p>

<p>
  <strong>Pricing:</strong>
  <%= @product.pricing %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>User:</strong>
  <%= @product.user %>
</p>

<p>
  <strong>State:</strong>
  <%= @product.state %>
</p>

<%= link_to 'Ver como cliente', product_path(@product, client: true) %> |
<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
<hr style="color: red;">

<%= render "archives/form" %>
<h2>archives</h2>
<% @product.archives.each do |archive| %>
  <%= link_to archive.archive, archive %> | <%= link_to 'Destroy', archive, method: :delete, data: { confirm: 'Are you sure?' } %><br>
<% end %>
